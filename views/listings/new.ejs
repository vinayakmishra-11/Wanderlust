<% layout('layouts/boilerplate') %>

<style>
/* New Listing Page Styling */
.create-listing-container {
    max-width: 630px;
    margin: 0 auto;
    padding: 40px 24px;
}

.page-header {
    text-align: center;
    margin-bottom: 48px;
}

.page-title {
    font-size: 32px;
    font-weight: 600;
    color: #222;
    margin-bottom: 8px;
}

.page-subtitle {
    font-size: 18px;
    color: #717171;
    font-weight: 400;
}

.form-section {
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 12px;
    padding: 32px;
    margin-bottom: 24px;
    box-shadow: 0 1px 2px rgba(0,0,0,0.08);
}

.section-title {
    font-size: 22px;
    font-weight: 600;
    color: #222;
    margin-bottom: 8px;
}

.section-subtitle {
    font-size: 16px;
    color: #717171;
    margin-bottom: 24px;
    line-height: 1.4;
}

.form-group {
    margin-bottom: 24px;
}

.form-label {
    font-size: 16px;
    font-weight: 600;
    color: #222;
    margin-bottom: 8px;
    display: block;
}

.form-control {
    width: 100%;
    padding: 16px;
    border: 1px solid #b0b0b0;
    border-radius: 8px;
    font-size: 16px;
    font-family: inherit;
    transition: border-color 0.2s ease;
    background: #fff;
}

.form-control:focus {
    outline: none;
    border-color: #222;
    box-shadow: 0 0 0 2px rgba(34, 34, 34, 0.1);
}

.form-control::placeholder {
    color: #717171;
}

textarea.form-control {
    min-height: 120px;
    resize: vertical;
}

.price-input-group {
    position: relative;
}

.currency-symbol {
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 16px;
    font-weight: 600;
    color: #222;
    z-index: 2;
}

.price-input {
    padding-left: 40px;
}

.row-group {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
}

.file-upload-area {
    border: 2px dashed #ddd;
    border-radius: 12px;
    padding: 40px 20px;
    text-align: center;
    background: #fafafa;
    transition: all 0.2s ease;
    cursor: pointer;
    position: relative;
    overflow: hidden;
}

.file-upload-area:hover {
    border-color: #222;
    background: #f5f5f5;
}

.file-upload-area.dragover {
    border-color: #ff385c;
    background: #fff5f5;
}

.upload-icon {
    font-size: 48px;
    color: #ddd;
    margin-bottom: 16px;
}

.upload-text {
    font-size: 18px;
    font-weight: 600;
    color: #222;
    margin-bottom: 8px;
}

.upload-subtext {
    font-size: 14px;
    color: #717171;
}

.file-input {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: pointer;
}

.image-preview {
    display: none;
    max-width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 8px;
    margin-top: 16px;
}

.submit-button {
    background: linear-gradient(to right, #e61e4d 0%, #e31c5f 50%, #d70466 100%);
    color: white;
    border: none;
    border-radius: 8px;
    padding: 16px 24px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    width: 100%;
    margin-top: 24px;
}

.submit-button:hover {
    background: linear-gradient(to right, #d50027 0%, #d50027 50%, #d50027 100%);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(230, 30, 77, 0.4);
}

.submit-button:active {
    transform: translateY(0);
}

.validation-feedback {
    font-size: 14px;
    margin-top: 6px;
    padding: 8px 12px;
    border-radius: 6px;
}

.valid-feedback {
    color: #008A05;
    background: #F7FDF7;
    border-left: 3px solid #008A05;
    display: none;
}

.invalid-feedback {
    color: #C13515;
    background: #FEF7F0;
    border-left: 3px solid #C13515;
    display: none;
}

.form-control.is-valid {
    border-color: #008A05;
}

.form-control.is-invalid {
    border-color: #C13515;
}

.form-control.is-valid ~ .valid-feedback {
    display: block;
}

.form-control.is-invalid ~ .invalid-feedback {
    display: block;
}

/* Progress Steps */
.progress-steps {
    display: flex;
    justify-content: center;
    margin-bottom: 40px;
}

.step {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #ddd;
    margin: 0 4px;
}

.step.active {
    background: #222;
}

/* Responsive Design */
@media (max-width: 768px) {
    .create-listing-container {
        padding: 24px 16px;
    }
    
    .form-section {
        padding: 24px 20px;
    }
    
    .page-title {
        font-size: 28px;
    }
    
    .row-group {
        grid-template-columns: 1fr;
        gap: 24px;
    }
}

@media (max-width: 480px) {
    .page-title {
        font-size: 24px;
    }
    
    .section-title {
        font-size: 20px;
    }
}
</style>

<div class="create-listing-container">
    <!-- Header -->
    <div class="page-header">
        <h1 class="page-title">Host your home on Wanderlust</h1>
        <p class="page-subtitle">Share your space and start earning</p>
        
        <!-- Progress Steps -->
        <div class="progress-steps">
            <div class="step active"></div>
            <div class="step"></div>
            <div class="step"></div>
        </div>
    </div>

    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data" id="listingForm">
        
        <!-- Basic Information Section -->
        <div class="form-section">
            <h2 class="section-title">Tell us about your place</h2>
            <p class="section-subtitle">Share some basic info, like where it is and what it's called.</p>
            
            <div class="form-group">
                <label for="title" class="form-label">Property title</label>
                <input 
                    name="listing[title]"
                    id="title"
                    placeholder="My beautiful apartment in downtown"
                    type="text"
                    class="form-control" 
                    required>
                <div class="valid-feedback">Great! That title looks perfect.</div>
                <div class="invalid-feedback">Please enter a descriptive title for your property.</div>
            </div>

            <div class="form-group">
                <label for="description" class="form-label">Description</label>
                <textarea 
                    name="listing[description]" 
                    id="description"
                    class="form-control"
                    placeholder="Tell guests what makes your place special..."
                    required></textarea>
                <div class="valid-feedback">Excellent description!</div>
                <div class="invalid-feedback">Please provide a detailed description of your property.</div>
            </div>
        </div>

        <!-- Location Section -->
        <div class="form-section">
            <h2 class="section-title">Where's your place located?</h2>
            <p class="section-subtitle">Help guests find you! This address won't be shared until you have a confirmed reservation.</p>
            
            <div class="row-group">
                <div class="form-group">
                    <label for="country" class="form-label">Country</label>
                    <input 
                        name="listing[country]" 
                        id="country"
                        placeholder="India" 
                        type="text"
                        class="form-control"
                        required>
                    <div class="valid-feedback">Country confirmed!</div>
                    <div class="invalid-feedback">Please enter a valid country name.</div>
                </div>

                <div class="form-group">
                    <label for="location" class="form-label">City</label>
                    <input 
                        name="listing[location]"
                        id="location"
                        placeholder="Mumbai, Maharashtra" 
                        type="text"
                        class="form-control"
                        required>
                    <div class="valid-feedback">Location looks good!</div>
                    <div class="invalid-feedback">Please enter a valid city/location.</div>
                </div>
            </div>
        </div>

        <!-- Photo Section -->
        <div class="form-section">
            <h2 class="section-title">Add some photos of your place</h2>
            <p class="section-subtitle">Photos help guests imagine staying in your place. You can add more later.</p>
            
            <div class="form-group">
                <label for="image" class="form-label">Upload photos</label>
                <div class="file-upload-area" id="fileUploadArea">
                    <div class="upload-icon">
                        <i class="fa-solid fa-cloud-arrow-up"></i>
                    </div>
                    <div class="upload-text">Choose photos to upload</div>
                    <div class="upload-subtext">Drag and drop or click to browse</div>
                    <input 
                        name="listing[image]" 
                        id="image"
                        type="file" 
                        class="file-input" 
                        accept="image/*"
                        required>
                    <input type="hidden" name="listing[image][filename]" value="">
                </div>
                <img id="imagePreview" class="image-preview" alt="Preview">
                <div class="valid-feedback">Perfect! Your photo looks great.</div>
                <div class="invalid-feedback">Please upload at least one photo of your property.</div>
            </div>
        </div>

        <!-- Pricing Section -->
        <div class="form-section">
            <h2 class="section-title">Set your price</h2>
            <p class="section-subtitle">Choose a competitive price for your area. You can change this anytime.</p>
            
            <div class="form-group">
                <label for="price" class="form-label">Price per night</label>
                <div class="price-input-group">
                    <span class="currency-symbol">â‚¹</span>
                    <input 
                        name="listing[price]"
                        id="price"
                        placeholder="2500"
                        type="number"
                        min="1"
                        class="form-control price-input"
                        required>
                </div>
                <div class="valid-feedback">Great pricing!</div>
                <div class="invalid-feedback">Please enter a valid price per night.</div>
            </div>
        </div>

        <button type="submit" class="submit-button">
            <i class="fa-solid fa-home me-2"></i>
            Publish your listing
        </button>
    </form>
</div>

<script>
// Form validation and interactions
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('listingForm');
    const fileUploadArea = document.getElementById('fileUploadArea');
    const fileInput = document.getElementById('image');
    const imagePreview = document.getElementById('imagePreview');

    // File upload drag and drop
    fileUploadArea.addEventListener('dragover', function(e) {
        e.preventDefault();
        fileUploadArea.classList.add('dragover');
    });

    fileUploadArea.addEventListener('dragleave', function(e) {
        e.preventDefault();
        fileUploadArea.classList.remove('dragover');
    });

    fileUploadArea.addEventListener('drop', function(e) {
        e.preventDefault();
        fileUploadArea.classList.remove('dragover');
        
        const files = e.dataTransfer.files;
        if (files.length > 0) {
            fileInput.files = files;
            handleFileSelect();
        }
    });

    // File input change
    fileInput.addEventListener('change', handleFileSelect);

    function handleFileSelect() {
        const file = fileInput.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                imagePreview.src = e.target.result;
                imagePreview.style.display = 'block';
                fileUploadArea.style.padding = '20px';
            };
            reader.readAsDataURL(file);
        }
    }

    // Form validation
    form.addEventListener('submit', function(e) {
        if (!form.checkValidity()) {
            e.preventDefault();
            e.stopPropagation();
        }
        
        form.classList.add('was-validated');
        
        // Individual field validation
        const inputs = form.querySelectorAll('input, textarea');
        inputs.forEach(input => {
            input.addEventListener('input', function() {
                if (this.checkValidity()) {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                } else {
                    this.classList.remove('is-valid');
                    this.classList.add('is-invalid');
                }
            });
        });
    });

    // Real-time validation
    const inputs = form.querySelectorAll('input, textarea');
    inputs.forEach(input => {
        input.addEventListener('blur', function() {
            if (this.value.trim() !== '') {
                if (this.checkValidity()) {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                } else {
                    this.classList.remove('is-valid');
                    this.classList.add('is-invalid');
                }
            }
        });
    });

    // Price formatting
    const priceInput = document.getElementById('price');
    priceInput.addEventListener('input', function() {
        // Remove non-numeric characters except decimal point
        this.value = this.value.replace(/[^\d]/g, '');
    });
});
</script>
